<% pending_approvals.each do |pending_approval| %>
  <div class="col-md-3 col-md-offset-1 home-block">
    <h5><b><%= pending_approval.user.full_name %></b></h5>
    <h6><b>Date Submitted:</b> <%= pending_approval.date %></h6>
    <h6><b>Rationale:</b> <%= truncate pending_approval.rationale, length: 40 %></h6>
    <div class="row">
      <div class="pull-right">
        <div class="col-md-3 col-md-offset-1">
          <%= link_to ' ', root_path, class: "glyphicon glyphicon-ok-sign index-icons" %>
        </div>
        <div class="col-md-3 col-md-offset-1">
          <%= link_to ' ', root_path, class: "glyphicon glyphicon-remove-sign index-icons" %>
        </div>
        <div class="col-md-3 col-md-offset-1">
          <%= link_to ' ', root_path, class: "glyphicon glyphicon-eye-open index-icons" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
