<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= truncate(post.rationale) %>
  </td>
  <td>
    <%= status_label post.status %>
  </td>
  <td>
    <%= link_to "Edit", edit_post_path(post), class: "btn-sm btn-warning", id: "edit_#{post.id}" %>
  </td>
  <td>
    <%= link_to "Delete", post_path(post), method: :delete, class: "btn-sm btn-danger", id: "delete_post_from_index_#{post.id}", data: { confirm: "Are you sure?" } %>
  </td>
</tr>
