<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= post.overtime_request %>
  </td>
  <td>
    <%= link_to truncate(post.rationale), post %>
  </td>
  <td>
    <%= status_label post.status %>
  </td>
  <td>
    <%= link_to ' ', edit_post_path(post), class: "glyphicon glyphicon-edit index-icons", id: "edit_#{post.id}" if policy(post).update? %>
  </td>
  <td>
    <%= link_to ' ', post_path(post), method: :delete, class: "glyphicon glyphicon-trash index-icons", id: "delete_post_from_index_#{post.id}", data: { confirm: "Are you sure?" } %>
  </td>
</tr>
