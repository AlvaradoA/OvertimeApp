<div class="row">
  <div class="col-md-12">
  <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <% if @post.errors.any? %>
      <% @post.errors.full_messages.each do |error| %>
        <%= js add_gritter(error, title: "Overtime App Notification", sticky: false) %>
      <% end %>
    <% end %>

    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :date, "Date" %>
      </div>
      <div class="col-md-8">
        <%= f.date_field :date, class: "form-control", placeholder: Date.today %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :rationale, "Rationale" %>
      </div>
      <div class="col-md-8">
        <%= f.text_area :rationale, rows: 10, class: "form-control", placeholder: "Enter your rationale", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :status, "Status" %>
      </div>
      <div class="col-md-2">
        <%= f.radio_button :status, 'submitted'%>
        <%= f.label :status, "Submitted" %>
      </div>
      <div class="col-md-2">
        <%= f.radio_button :status, 'approved'%>
        <%= f.label :status, "Approved" %>
      </div>
      <div class="col-md-2">
        <%= f.radio_button :status, 'rejected'%>
        <%= f.label :status, "Rejected" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-8 col-md-offset-2">
        <%= f.submit "Save", class: "btn btn-default btn-block" %>
      </div>
    </div>
  <% end %>
  </div>
</div>
