<div class="row">
  <div class="col-md-12">
  <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :date, "Date" %>
      </div>
      <div class="col-md-8">
        <%= f.date_field :date, class: "form-control", placeholder: Date.today %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :rationale, "Rationale" %>
      </div>
      <div class="col-md-8">
        <%= f.text_area :rationale, rows: 10, class: "form-control", placeholder: "Enter your rationale", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-8 col-md-offset-2">
        <%= f.submit "Save", class: "btn btn-default btn-block" %>
      </div>
    </div>
  <% end %>
  </div>
</div>
